{
    "tasks": {
        "dev": "deno run --watch --allow-net --allow-read --allow-write src/main.ts"
    },
    "fmt": {
        "options": {
            "indentWidth": 4,
            "singleQuote": true,
            "semiColons": false
        },
        "files": {
            "exclude": ["complaints.md"]
        }
    },
    "lint": {
        "rules": {
            "exclude": [
                // Because of "withConn(...)"
                "require-await"
            ]
        }
    },
    "compilerOptions": {
        "noUncheckedIndexedAccess": true
    }
}
